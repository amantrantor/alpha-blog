<div class="navbar">
    <%= link_to "ALPHA-BLOG", root_path %>
    <%= link_to "Bloggers", users_path %>
    <div class="dropdown">
        <button class="dropbtn">Articles 
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-content">
            <%= link_to "Show Articles", articles_path %>
            <%= link_to 'Create Article', new_article_path %>
        </div>   
    </div> 
    <% if logged_in? %>
        <%= link_to current_user.username, user_path(current_user) %>
        <%= link_to "Log Out", logout_path, data: { "turbo-method": :delete } %>
    <% else %>
        <%= link_to "Log In", login_path %>
        <%= link_to "Sign Up", signup_path %>
    <% end %>
</div>

